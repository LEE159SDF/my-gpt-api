{
  "openapi": "3.1.0",
  "info": {
    "title": "농업 전문가 API",
    "description": "비료, 날씨, 병해충 정보를 조회하는 API입니다.",
    "version": "v3.0.0"
  },
  "servers": [
    {
      "url": "https://gpt-soil-tras.vercel.app"
    }
  ],
  "paths": {
    "/api/fertilizer": {
      "get": {
        "description": "작물 코드를 받아서 해당 작물의 표준 비료 사용량을 알려줍니다.",
        "summary": "비료 정보 조회",
        "operationId": "getFertilizerInfo",
        "parameters": [
          {
            "name": "cropCode",
            "in": "query",
            "description": "조회할 작물의 코드. (예: 벼는 00001)",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ]
      }
    },
    "/api/weather": {
      "get": {
        "description": "지역 코드를 받아서 3~10일 후의 최저/최고 기온 예보를 알려줍니다.",
        "summary": "중기 기온 예보 조회",
        "operationId": "getWeatherForecast",
        "parameters": [
          {
            "name": "regId",
            "in": "query",
            "description": "조회할 지역의 코드. (예: 서울 11B10101, 대구 11H10701)",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ]
      }
    },
    "/api/pest": {
      "get": {
        "description": "작물 이름이나 병해충 이름으로 관련 병 정보를 검색합니다.",
        "summary": "병해충 정보 검색",
        "operationId": "getPestInfo",
        "parameters": [
          {
            "name": "cropName",
            "in": "query",
            "description": "정보를 찾고 싶은 작물 이름. (예: 고추)",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "pestName",
            "in": "query",
            "description": "정보를 찾고 싶은 병해충 이름. (예: 탄저병)",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ]
      }
    }
  }
}