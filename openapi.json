{
  "openapi": "3.1.0",
  "info": {
    "title": "농업용 비료 및 날씨 API",
    "description": "작물별 비료 사용량과 중기 기온 예보를 조회하는 API입니다.",
    "version": "v2.0.0"
  },
  "servers": [
    {
      "url": "https://gpt-soil-tras.vercel.app"
    }
  ],
  "paths": {
    "/api/fertilizer": {
      "get": {
        "description": "작물 코드를 받아서 해당 작물의 표준 비료 사용량을 알려줍니다.",
        "summary": "비료 정보 조회",
        "operationId": "getFertilizerInfo",
        "parameters": [
          {
            "name": "cropCode",
            "in": "query",
            "description": "조회할 작물의 코드. (예: 벼는 00001)",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ]
      }
    },
    "/api/weather": {
      "get": {
        "description": "지역 코드를 받아서 3~10일 후의 최저/최고 기온 예보를 알려줍니다.",
        "summary": "중기 기온 예보 조회",
        "operationId": "getWeatherForecast",
        "parameters": [
          {
            "name": "regId",
            "in": "query",
            "description": "조회할 지역의 코드. (예: 서울 11B10101, 대구 11H10701)",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ]
      }
    }
  }
}